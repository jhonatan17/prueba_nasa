<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@drawable/fondo_login">

    <Button
            android:text="Button"
            android:layout_width="373dp"
            android:layout_height="61dp"
            android:id="@+id/button1"
            tools:ignore="MissingConstraints" style="@android:style/Widget.Button"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="536dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="134dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="22dp" android:layout_marginStart="22dp" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" app:layout_constraintEnd_toEndOf="parent"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <EditText
                android:layout_width="377dp"
                android:layout_height="62dp"
                android:inputType="textPersonName|textPassword"
                android:text="Password"
                android:ems="10"
                android:id="@+id/editText"
                android:background="@drawable/b_pass" android:paddingLeft="60dp"
                android:layout_marginTop="437dp"
                android:layout_marginBottom="232dp"
                android:layout_marginLeft="19dp" android:layout_marginStart="19dp" android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:inputType="textPersonName"
                android:text="Usuario"
                android:ems="10"
                android:id="@+id/editText2"
                android:background="@drawable/b_user" android:paddingLeft="60dp"
                android:layout_marginTop="328dp"
                android:layout_marginBottom="328dp"
                android:layout_marginLeft="19dp" android:layout_marginStart="19dp" android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>